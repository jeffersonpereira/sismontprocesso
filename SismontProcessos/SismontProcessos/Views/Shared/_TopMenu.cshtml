<div class="col-xs-12 col-sm-6 col-md-4">
    <ul class="nav navbar-right">
        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle"><span class="label label-danger">@ViewBag.Total</span>  <i class="fa fa-envelope fa-fw"></i>  <i class="fa fa-caret-down"></i></a>
            <ul class="dropdown-menu">
                <li><a href="~/Requisicao">Você possui @ViewBag.Total novas requisições</a></li>
            </ul>
        </li>

        <li class="dropdown">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle"><i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="#" id="logout"><i class="fa fa-sign-out fa-fw" id="logout"></i> Logout</a>
                </li>
            </ul>
        </li>
    </ul>
</div>
<div id="dialog-confirm"></div>
<script>
    function fnOpenNormalDialog() {
        jQuery("#dialog-confirm").html("Confirma saída do aplicativo?");

        jQuery("#dialog-confirm").dialog({
            resizable: false,
            modal: true,
            title: "Confirmação",
            height: 160,
            width: 250,
            buttons: {
                "Sim": function () {
                    var url = "/login/SignOut";
                    $.post(url, function (data) {
                        window.location.href = "/";
                    });
                },
                "Não": function () {
                    jQuery(this).dialog('close');
                    callback(false);
                }
            }
        });
    }
    $('#logout').click(fnOpenNormalDialog);
</script>