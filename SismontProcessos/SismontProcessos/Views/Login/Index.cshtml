@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sismont Processos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/scripts/ng-grid.min.js")
    @Scripts.Render("~/scripts/app/factory/api.factory.js")
    @Scripts.Render("~/scripts/app/controller/signin.controller.js")
    
</head>
<body>
    <div class="container" ng-app="app">
        <div class="row" ng-controller="userController">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <img class="profile-img" src="~/img/anon_user.png"
                         alt="">
                    <form class="form-signin" ng-submit="signin()">
                        <div class="form-group">
                            <input type="text" class="form-control center-block" placeholder="CNPJ" ng-model="user.cnpj" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control center-block" placeholder="Login" ng-model="user.login" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control center-block" placeholder="Senha" ng-model="user.senha" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                        </div>
                    </form>
                    <div ng-view="erro!=''">
                        <label class="text-warning text-center">{{erro}}</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="http://sismont.com/" target="_blank">© @DateTime.Today.Year Sismont Desenvolvimento de Sistemas</a></li>
                </ul>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryplugin")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tema")

</body>
</html>
