
@{
    ViewBag.Title = "Colaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div ng-app="app">
        <div ng-controller="funcionarioController">
            <div class="container-fluid">
                <form class="col-lg-12" ng-submit="add()" name="form">
                    @Html.Partial("RequisicaoTemplate")
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#pessoais" role="tab" data-toggle="tab">Dados Pessoais</a></li>
                        <li><a href="#documentacao" role="tab" data-toggle="tab">Documentação</a></li>
                        <li><a href="#admissao" role="tab" data-toggle="tab">Admissão</a></li>
                        <li><a href="#dependente" role="tab" data-toggle="tab">Dependente</a></li>
                    </ul>
                    
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane active" id="pessoais">
                                <div class="row">
                                    <div class="form-group col-md-8">
                                        <label class="control-label">Nome</label>
                                        <input type="text" ng-model="funcionario.nome" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Nascimento</label>
                                        <input type="text" ng-model="funcionario.nascimento" class="form-control date" data-provide="datepicker" data-date-format="dd/mm/yyyy" required />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Sexo</label>
                                        <select class="form-control" ng-model="funcionario.sexo" required>
                                            <option value="M">Masculino</option>
                                            <option value="F">Feminino</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Estado Cívil</label>
                                        <select class="form-control" ng-model="funcionario.estado_civil" required>
                                            <option value="0">Solteito</option>
                                            <option value="1">Casado</option>
                                            <option value="2">Divorciado</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Nome do Cônjuge</label>
                                        <input type="text" ng-model="funcionario.conjuge" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label class="control-label">Pai</label>
                                        <input type="text" ng-model="funcionario.pai" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="control-label">Mãe</label>
                                        <input type="text" ng-model="funcionario.mae" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-2">
                                        <label class="control-label">CEP</label>
                                        <input type="text" id="cep" ng-model="funcionario.cep" class="form-control" ng-change="getEndereco()" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="control-label">Endereço</label>
                                        <input type="text" ng-model="funcionario.endereco" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-1">
                                        <label class="control-label">Número</label>
                                        <input type="text" ng-model="funcionario.numero" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label class="control-label">Complemento</label>
                                        <input type="text" ng-model="funcionario.complemento" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Bairro</label>
                                        <input type="text" ng-model="funcionario.bairro" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Município</label>
                                        <input type="text" ng-model="funcionario.municipio" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-1">
                                        <label class="control-label">UF</label>
                                        <input type="text" ng-model="funcionario.uf" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label class="control-label">Telefone</label>
                                        <input type="text" id="telefone" ng-model="funcionario.telefone" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label class="control-label">Celular</label>
                                        <input type="text" id="celular" ng-model="funcionario.celular" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="control-label">Email</label>
                                        <input type="text" ng-model="funcionario.email" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Naturalidade</label>
                                        <input type="text" ng-model="funcionario.naturalidade" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-1">
                                        <label class="control-label">UF</label>
                                        <input type="text" ng-model="funcionario.uf_naturalidade" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <!--Documentação-->
                            <div class="tab-pane" id="documentacao">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">CPF</label>
                                        <input type="text" id="cpf" ng-model="funcionario.cpf" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">RG</label>
                                        <input type="text" ng-model="funcionario.rg" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Data de Emissão do RG</label>
                                        <input type="text" ng-model="funcionario.data_emissao_rg" class="form-control date" data-provide="datepicker" data-date-format="dd/mm/yyyy" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">PIS/PASEP</label>
                                        <input type="text" id="pis" ng-model="funcionario.pis" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">CTPS</label>
                                        <input type="text" ng-model="funcionario.ctps" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Série</label>
                                        <input type="text" ng-model="funcionario.serie" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Título de Eleitor</label>
                                        <input type="text" ng-model="funcionario.titulo_eleitor" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Zona</label>
                                        <input type="text" ng-model="funcionario.zona" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Seção</label>
                                        <input type="text" ng-model="funcionario.secao" class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">CNH</label>
                                        <input type="text" ng-model="funcionario.titulo_eleitor" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Categoria</label>
                                        <input type="text" ng-model="funcionario.categoria_cnh" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Validade</label>
                                        <input type="text" ng-model="funcionario.validade_cnh" class="form-control date" data-provide="datepicker" data-date-format="dd/mm/yyyy" />
                                    </div>
                                </div>
                            </div>
                            <!--Admissão-->
                            <div class="tab-pane" id="admissao">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Cargo</label>
                                        <input type="text" ng-model="funcionario.cargo" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Salário</label>
                                        <input type="text" id="salario" ng-model="funcionario.salario" class="form-control" required />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="control-label">Admissão</label>
                                        <input type="text" ng-model="funcionario.admissao" class="form-control date" data-provide="datepicker" data-date-format="dd/mm/yyyy" required />
                                    </div>
                                </div>
                            </div>
                            <!--Dependente-->
                            <div class="tab-pane" id="dependente">
                                <button class="btn btn-primary fa fa-plus" ng-click="open()"></button>
                                <div class="gridStyle col-lg-12" ng-grid="gridDependentes"></div>
                            </div>
                            <button class="btn btn-primary" type="submit" ng-disabled="form.$invalid">Salvar</button>
                            <button class="btn btn-default" type="reset">Limpar</button>
                            @Html.Partial("DependenteTemplate")
                        </div>
                </form>
                <toaster-container toaster-options="{'time-out': 3000, 'close-button':true}"></toaster-container>
            </div>
        </div>
</div>

<script>
    jQuery.noConflict();
    jQuery(document).ready(function ($) {
        $('.date').mask('99/99/9999');
        $('#cpf').mask('999.999.999-99');
        $('#pis').mask('9.999.999.999-9');
        $('#cep').mask('99.999-999');
        $('#telefone').mask('(99) 9999-9999');
        $('#celular').mask('(99) 9999-9999');
        $('#salario').mask("#.##0,00", { reverse: true, maxlength: false });
    });
</script>

@Scripts.Render("~/scripts/app/controller/funcionario.controller.js")



