@{
    ViewBag.Title = "Requisição";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-app="app">
    <div ng-controller="requisicaoController">
        <div class="row">
            <div class="col-md-2 left">
                <ul class="nav navbar">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle"><i class="fa fa-bars fa-fw"></i>  <i class="fa fa-caret-down"></i></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Funcionário", "Funcionario", "Requisicao")</li>
                            <li>@Html.ActionLink("Férias", "Ferias", "Requisicao")</li>
                            <li>@Html.ActionLink("Rescisão", "Rescisao", "Requisicao")</li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                            <li class="divider"></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 right">
                <input type="search" class="form-control" placeholder="Pesquisar..." ng-model="search"/>
            </div>
        </div>
        <div class="gridStyle col-lg-12" ng-grid="gridRequisicao"></div>
        <div class="gridStyle col-lg-12" ng-grid="gridMovimentacao" @*ng-show="showDetail"*@>
            <p class="h4">Movimentações</p>
        </div>
        @{
            Html.RenderPartial("~/Views/Requisicao/AnexoTemplate.cshtml");
        }
    </div>
</div>

    @Scripts.Render("~/scripts/app/controller/requisicao.controller.js")
    @Scripts.Render("~/scripts/app/factory/requisicao.factory.js")
    @Scripts.Render("~/scripts/app/factory/movimentacao.factory.js")
    @Scripts.Render("~/scripts/app/factory/documento.factory.js")
